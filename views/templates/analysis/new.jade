.container.app-container
  form(ng-submit="onCreateAnalysis()")
    tabset(justified='true')
      tab(heading='Select Corpora')
        .list-group
          a.list-group-item(ng-repeat="corpus in corpora",ng-class="{active:corpus.active}",ng-click="onCorpusClick(this)")
            h4.list-group-item-heading
              strong {{ corpus.title }}
            p.list-group-item-text
              | {{ corpus.fileName }}
      tab(heading='Analysis Type')
        .list-group
          a.list-group-item(ng-repeat="analysis in analysisTypes",ng-class="{active:selectedAnalysis==analysis}",ng-click="onAnalysisClick(this)")
            h4.list-group-item-heading
              strong {{ analysis.name }}
            p.list-group-item-text
              | {{ analysis.description }}
        button.btn.btn-lg.btn-primary.full-width(type="submit") Create Analysis

  